<%-include("sidemenu")-%>
    <div class="text-center information">

        <%if(success.length>0){%>
            <div class="success">
              <i class="fas fa-check-circle"></i>
              <%=success%>
              <span onclick="this.parentElement.style.display='none'">&times;</span>
          </div>
        
          
            <%}else{%>
              <%if(danger.length>0){%>
                <div class="danger">
                 
                  <i class="fas fa-exclamation-triangle"></i>
                  <%=danger%>
                  <span onclick="this.parentElement.style.display='none'">&times;</span>
              </div>
<%}%>
<%}%>
        <br>
        <form method="POST" action="personal" enctype="multipart/form-data" id="form1">

            <input name="btnn" id="one"  value="1" hidden>
    

            <div class="container container-personal personalll">
                <div class="wrapper">
                    <div class="image">
                       
                        <%if(found[0].filepresentornot===1){%>
                            
                            <img class="profilepic" src="./uploads/<%=found[0]._id%>/<%=found[0].img%>" alt="">
                            <%}%>

                    </div>
                </div>

                <div class="content">
                      
                    <div class="icon"><img src="./icons/upload.png"></div>
                    <div class="text">No file chosen, yet!</div>
                </div>

                <%if(found[0].filepresentornot===1){%>
                    <div class="file-name" style="overflow: hidden;" id="fname">
                        <%=found[0].img%>
                    </div>
                    <%}else{%>
                        <div class="file-name" id="fname">File name</div>
                        <%}%>



            </div>

            <br>

            <label class="custom-file-upload">
                <input name="photo" type="file" />
                <img class="cloud" src="./icons/upload.png"> Choose File
            </label>

    
                <button class="btn button uploadbtn">
                    <i class="fas fa-upload"></i>
                    Upload & Show</button>
           


            <!-- </div> -->


    </div>

    <br><br>


    <div class="footer">
        <div class="container flexx">
        <a href="/awards" class="btn button prev marginnnn">
            <i class="fas fa-arrow-left iconn"></i>
            <span class="change">Prev</span>
        </a>

        <button class="btn button next"  onclick="func()">
            <i class="fas fa-trash-alt iconn"></i>
            <span class="change">Remove Picture</span>
        </button>


        <a href="/extra" class="btn button next">
            <i class="fas fa-arrow-right iconn"></i>
            <span class="change">Save & Next</span>
        </a>
        <!-- <button name="btnn" value="2" class="btn button next">Save & Download</button> -->
        </div>
    </div>



    </form>
    </div>
    </div>
    </div>


