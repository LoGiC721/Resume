<%-include("sidemenu")-%>
<div class="text-center information">
    <h3>Your Extra Details</h3>
    <br>
    <form method="POST" action="skills">
        <%for(let i=0;i<noOfSkills;i++){%>
        <div class="sameline">    
            <%if((found[0].skills.length!==0&&((noOfSkills-i)!==1))||(flag2===1)){%>
            <label for="skillsname">Skill Name</label>
            <input type="text" placeholder="skillsname" id="skillsname" name="skillsname" value="<%=found[0].skills[i].skillsname%>" autocomplete="off">
            <%}else{%>
                <label for="skillsname">Skill Name</label>
                <input type="text" placeholder="skillsname" id="skillsname" name="skillsname" value="" autocomplete="off">
            <%}%>      
        </div>

        <div class="sameline">
            <%if((found[0].skills.length!==0&&((noOfSkills-i)!==1))||(flag2===1)){%>
            <label for="skillsdetails">Level Percentage</label>
            <input type="number" placeholder="Level" id="skillsdetails" name="skillsdetails" value="<%=found[0].skills[i].skillsdetails%>" autocomplete="off"> 
            <%}else{%>
                <label for="skillsdetails">Level Percentage</label>
                <input type="number" placeholder="Level" id="skillsdetails" name="skillsdetails" value="" autocomplete="off"> 
            <%}%>          
        </div>
        <br>
		<hr class="linecoloured">
        <%}%>
		<br>
		
		<br>
		<br>
        <div class="footer">
            <a href="/work" class="btn button prev">Prev</a>
			<button class="add increment" name="btn" value="1">Add Skill</button>
		    <%if(noOfSkills===1){%>
                <button type="button" class="add decrement notclickable" style="cursor: no-drop;" name="btn" value="2">Remove Skill</button>
                <%}else{%>
                    <button class="add decrement" name="btn" value="2">Remove Skill</button>
                <%}%>
			<button name="btn" value="3" class="btn button next">Save & Next</button>
          </div>
    </form>

    </div>
    </div>
</div>
