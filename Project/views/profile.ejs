<%-include("sidemenu")-%>
  <div class="text-center information">
      <h3>Enter Personal information</h3>
      <br>
      <form method="POST" action="profile">
        <div class="sameline">
            <%if(found[0].firstname!=="NULL"){%>
            <label for="firstname">First Name</label>
            <input type="text"  placeholder="First name" id="firstname" name="firstname" value="<%=found[0].firstname%>" autocomplete="off">
            <%}else{%>
                <label for="firstname">First Name</label>
                <input type="text"  placeholder="First name" id="firstname" name="firstname" value="" autocomplete="off">
            <%}%>
        </div>

        <div class="sameline">
            <%if(found[0].lastname!=="NULL"){%>
            <label for="lastname">Last Name</label>
            <input type="text" placeholder="Last name" id="lastname" name="lastname" value="<%=found[0].lastname%>" autocomplete="off">
            <%}else{%>
                <label for="lastname">Last Name</label>
                <input type="text" placeholder="Last name" id="lastname" name="lastname" value="" autocomplete="off">
                <%}%>    
        </div>
        <div class="sameline">
            <%if(found[0].email!=="NULL"){%>
            <label for="email">Email</label>
            <input type="email" placeholder="Email" id="email" name="email" value="<%=found[0].email%>" autocomplete="off">
            <%}else{%>
                <label for="email">Email</label>
                <input type="email" placeholder="Email" id="email" name="email" value="" autocomplete="off">
                <%}%> 
        </div>
        <div class="sameline">
            <%if(found[0].pno!=="NULL"){%>
            <label for="pno">Phone</label>
            <input type="number" placeholder="Phone" id="pno" name="pno" value="<%=found[0].pno%>" autocomplete="off">
            <%}else{%>
                <label for="pno">Phone</label>
            <input type="number" placeholder="Phone" id="pno" name="pno" value="" autocomplete="off">
            <%}%> 
        </div>
        <div class="sameline">
            <%if(found[0].website!=="NULL"){%>
            <label for="website">Website</label>
            <input type="url" placeholder="Website" id="website" name="website"  value="<%=found[0].website%>" autocomplete="off">
            <%}else{%>
                <label for="website">Website</label>
                <input type="url" placeholder="Website" id="website" name="website" value="" autocomplete="off">
                <%}%>  
        </div>
        <div class="sameline">
            <%if(found[0].github!=="NULL"){%>
            <label for="github">Github Link</label>
            <input type="url" placeholder="Github" id="github" name="github" value="<%=found[0].github%>" autocomplete="off">
            <%}else{%>
                <label for="github">Github Link</label>
            <input type="url" placeholder="Github" id="github" name="github" value="" autocomplete="off">
            <%}%>   
        </div>
        <div class="sameline">
            <%if(found[0].linkedin!=="NULL"){%>
            <label for="linkedin">Linkedin Link</label>
            <input type="url" placeholder="LinkedIn" id="linkedin" name="linkedin" value="<%=found[0].linkedin%>" autocomplete="off">
            <%}else{%>
                <label for="linkedin">Linkedin Link</label>
            <input type="url" placeholder="LinkedIn" id="linkedin" name="linkedin" value="" autocomplete="off">
            <%}%>
        </div>
        <div class="sameline">
            <%if(found[0].twitter!=="NULL"){%>
            <label for="twitter">Twitter Link</label>
            <input type="url" placeholder="Twitter" id="twitter" name="twitter" value="<%=found[0].twitter%>" autocomplete="off">
            <%}else{%>
                <label for="twitter">Twitter Link</label>
                <input type="url" placeholder="Twitter" id="twitter" name="twitter" value="" autocomplete="off">
                <%}%>  
        </div>
        <br><br>
        <div class="footer">
            <a class="btn button prev notclickable" style="cursor: no-drop;">Prev</a>
            <button class="btn button next">Next</button>
          </div>
    </form>
</div>
