                                    <%}%>
                        </div>



                        <div class="sameline">
                            <%if(found[0].dob!==null){%>


                                <%let template=found[0].dob%>
                                    <%let date=template.getDate()%>
                                        <%if(date<10){%>
                                            <%date='0' +date%>
                                                <%}%>
                                                    <%let month=(template.getMonth())+1%>
                                                        <%if(month<10){%>
                                                            <%month='0' +month%>
                                                                <%}%>
                                                                    <%let year=template.getFullYear()%>
                                                                        <%let finaldate=`${year}-${month}-${date}`%>



                                                                            <label for="dob">Date of Birth</label>
                                                                            <input type="date" placeholder="DOB"
                                                                                id="dob" name="dob"
                                                                                value="<%=finaldate%>"
                                                                                autocomplete="off">
