<%-include("sidemenu")-%>
<div class="text-center information">
    <h4>Your Award Details</h4>
    <br>
    <form method="POST" action="awards">
        <%for(let i=0;i<found[0].noOfAwards;i++){%>
        <div class="sameline">
            <label for="awardname">Award name </label>
            <%if(found[0].awards.length!==0){%>
           <input type="text" placeholder="awardname" id="awardname" name="awardname" value="<%=found[0].awards[0].awardname[i]%>" autocomplete="off">
            <%}else{%>
                <input type="text" placeholder="awardname" id="awardname" name="awardname" value="" autocomplete="off">  
            <%}%>    
        </div>

        <div class="sameline">
            <label for="awarddate">Award Date</label>
            <%if(found[0].awards.length!==0){%>
                <%if(found[0].awards[0].awarddate[i]!=null){%>
                    <%let template=found[0].awards[0].awarddate[i]%>
                    <%let date=template.getDate()%>
                    <%if(date<10){%>
                    <%date='0' +date%>
                    <%}%>
                    <%let month=(template.getMonth())+1%>
                    <%if(month<10){%>
                    <%month='0' +month%>
                    <%}%>
                    <%let year=template.getFullYear()%>
                    <%let finaldate=`${year}-${month}-${date}`%>
            
            <input type="date" placeholder="awarddate" id="awarddate" name="awarddate" value="<%=finaldate%>" autocomplete="off">
            <%}else{%>
                <input type="date" placeholder="awarddate" id="awarddate" name="awarddate" value="" autocomplete="off">
                <%}%>
                <%}else{%>
                    <input type="date" placeholder="awarddate" id="awarddate" name="awarddate" value="" autocomplete="off">
                    <%}%>     
        </div>
        <div class="sameline">
            <label for="awarder">Awarder</label>
            <%if(found[0].awards.length!==0){%>
            
            <input type="text" placeholder="awarder" id="awarder" name="awarder" value="<%=found[0].awards[0].awarder[i]%>" autocomplete="off">
            <%}else{%>
               
            <input type="text" placeholder="awarder" id="awarder" name="awarder" value="" autocomplete="off">
            <%}%> 
        </div>
        <div class="sameline">
            <label for="Awarddescription">Award description</label>
            <%if(found[0].awards.length!==0){%>
            
            <input type="text" placeholder="Awarddescription" id="Awarddescription" name="Awarddescription" value="<%=found[0].awards[0].Awarddescription[i]%>" autocomplete="off">
            <%}else{%>
                
                <input type="text" placeholder="Awarddescription" id="Awarddescription" name="Awarddescription" value="" autocomplete="off">
            <%}%>    
        </div>
        <br>
        
		<hr class="linecoloured">
        <br>
		<%}%>
		<br>
		<br>
		<br>
		<div class="footer">
			<a href="/projects" class="btn button prev">Prev</a>
			<button class="add increment" name="btn" value="1">Add Award</button>
            <%if(found[0].noOfAwards===1){%>
		    <button type="button" class="add decrement notclickable" style="cursor: no-drop;" name="btn" value="2">Remove Award</button>
            <%}else{%>
                <button class="add decrement" name="btn" value="2">Remove Award</button>
            <%}%>    
			<button name="btn" value="3" class="btn button next">Save & Next</button>
		</div>
    </form>
    </div>
    </div>
</div>
