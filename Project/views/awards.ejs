<%-include("sidemenu")-%>
<div class="text-center information">


    <%if(success.length>0){%>
        <div class="success">
         
          <i class="fas fa-check-circle"></i>
          <%=success%>
          <span onclick="this.parentElement.style.display='none'">&times;</span>
      </div>
    
      
        <%}else{%>
          <%if(danger.length>0){%>
            <div class="danger">
             
              <i class="fas fa-exclamation-triangle"></i>
              <%=danger%>
              <span onclick="this.parentElement.style.display='none'">&times;</span>
          </div>
<%}%>
<%}%>


    <h4>Your Award Details</h4>
    <br>
    <form method="POST" action="awards">
        <%for(let i=0;i<found[0].noOfAwards;i++){%>
        <div class="sameline">
            <label for="awardname<%=i%>">Award name </label>
            <%if(found[0].awards.length!==0){%>
           <input type="text" placeholder="Award name" id="awardname<%=i%>" name="awardname" value="<%=found[0].awards[0].awardname[i]%>" autocomplete="off">
            <%}else{%>
                <input type="text" placeholder="Award name" id="awardname<%=i%>" name="awardname" value="" autocomplete="off">  
            <%}%>    
        </div>

        <div class="sameline">
            <label for="awarddate<%=i%>">Award Date</label>
            <%if(found[0].awards.length!==0){%>
                <%if(found[0].awards[0].awarddate[i]!=null){%>
                    <%let template=found[0].awards[0].awarddate[i]%>
                    <%let date=template.getDate()%>
                    <%if(date<10){%>
                    <%date='0' +date%>
                    <%}%>
                    <%let month=(template.getMonth())+1%>
                    <%if(month<10){%>
                    <%month='0' +month%>
                    <%}%>
                    <%let year=template.getFullYear()%>
                    <%let finaldate=`${year}-${month}-${date}`%>
            
            <input type="date" placeholder="Award date" id="awarddate<%=i%>" name="awarddate" value="<%=finaldate%>" autocomplete="off">
            <%}else{%>
                <input type="date" placeholder="Award date" id="awarddate<%=i%>" name="awarddate" value="" autocomplete="off">
                <%}%>
                <%}else{%>
                    <input type="date" placeholder="Award date" id="awarddate<%=i%>" name="awarddate" value="" autocomplete="off">
                    <%}%>     
        </div>
        <div class="sameline">
            <label for="awarder<%=i%>">Awarder</label>
            <%if(found[0].awards.length!==0){%>
            
            <input type="text" placeholder="Awarder" id="awarder<%=i%>" name="awarder" value="<%=found[0].awards[0].awarder[i]%>" autocomplete="off">
            <%}else{%>
               
            <input type="text" placeholder="Awarder" id="awarder<%=i%>" name="awarder" value="" autocomplete="off">
            <%}%> 
        </div>
        <div class="sameline">
            <label for="Awarddescription<%=i%>">Description</label>
            <%if(found[0].awards.length!==0){%>
            
            <input type="text" placeholder="Award description" id="Awarddescription<%=i%>" name="Awarddescription" value="<%=found[0].awards[0].Awarddescription[i]%>" autocomplete="off">
            <%}else{%>
                
                <input type="text" placeholder="Award description" id="Awarddescription<%=i%>" name="Awarddescription" value="" autocomplete="off">
            <%}%>    
        </div>
        <br>
        
		<hr class="linecoloured">
        <br>
		<%}%>
		<br>
		<br>
		<br>
		<div class="footer">
            <div class="container flexx">
			<a href="/projects" class="btn button prev">
                <i class="fas fa-arrow-left iconn"></i>
				<span class="change">Prev</span>
            </a>
			<button class="add increment" name="btn" value="1">
                <i class="fas fa-plus iconn"></i>
				<span class="change">Add Award</span>
            </button>
            <%if(found[0].noOfAwards===1){%>
		    <button type="button" class="add decrement notclickable" style="cursor: no-drop;" name="btn" value="2">
                <i class="fas fa-minus iconn"></i>
				<span class="change">Remove Award</span>
            </button>
            <%}else{%>
                <button class="add decrement" name="btn" value="2">
                    <i class="fas fa-minus iconn"></i>
				<span class="change">Remove Award</span>
                </button>
            <%}%>    
			<button name="btn" value="3" class="btn button next">
                <i class="fas fa-arrow-right iconn"></i>
				<span class="change">Save & Next</span>
            </button>
            </div>
		</div>
    </form>
    </div>
    </div>
</div>

