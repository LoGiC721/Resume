<%-include("sidemenu")-%>
    <div class="text-center information">


        <%if(success.length>0){%>
            <div class="success">
            
              <i class="fas fa-check-circle"></i>
              <%=success%>
              <span onclick="this.parentElement.style.display='none'">&times;</span>
          </div>
        
          
            <%}else{%>
              <%if(danger.length>0){%>
                <div class="danger ">
                 
                  <i class="fas fa-exclamation-triangle"></i>
                  <%=danger%>
                  <span onclick="this.parentElement.style.display='none'">&times;</span>
              </div>
<%}%>
<%}%>


        <h4>Your Project Details</h4>
        <br>
        <form method="POST" action="projects">
            <%for(let i=0;i<found[0].noOfProjects;i++){%>

                <div class="sameline">
                    
                    <%if(found[0].project.length!==0){%>
                        
                        <label for="projectname<%=i%>">Project * </label>
                        <input type="text" placeholder="Project Name *" id="projectname<%=i%>" name="projectname"
                            value="<%=found[0].project[0].projectname[i]%>" autocomplete="off" required>
                            <%}else{%>
                               
                            <label for="projectname<%=i%>">Project * </label>
                            <input type="text" placeholder="Project Name *" id="projectname<%=i%>" name="projectname" value="" autocomplete="off" required>
                            <%}%>
                </div>
                <div class="sameline">
                    <%if(found[0].project.length!==0){%>
                        <label for="project1description<%=i%>">Description</label>
                        <input type="text" placeholder="Project description" id="project1description<%=i%>"
                            name="project1description" value="<%=found[0].project[0].project1description[i]%>" autocomplete="off">
                            <%}else{%>
                            <label for="project1description<%=i%>">Description</label>
                            <input type="text" placeholder="Project description" id="project1description<%=i%>"
                                name="project1description" value="" autocomplete="off">
                            <%}%>
                </div>
                <div class="sameline">
                    <%if(found[0].project.length!==0){%>
                        <label for="link<%=i%>">Link</label>
                        <input type="url" placeholder="link" id="link<%=i%>" name="link"
                            value="<%=found[0].project[0].link[i]%>" autocomplete="off">
                            <%}else{%>
                                <label for="link<%=i%>">Link</label>
                                <input type="url" placeholder="link" id="link<%=i%>" name="link"
                                    value="" autocomplete="off">
                            <%}%>
                </div>
                <div class="sameline">
                    <%if(found[0].project.length!==0){%>
                        <label for="toolsused<%=i%>">Tools Used</label>
                        <input type="text" placeholder="Tools used" id="toolsused<%=i%>" name="toolsused"
                            value="<%=found[0].project[0].toolsused[i]%>" autocomplete="off">
                            <%}else{%>
                            <label for="toolsused<%=i%>">Tools Used</label>
                            <input type="text" placeholder="Tools used" id="toolsused<%=i%>" name="toolsused" value="" autocomplete="off">
                            <%}%>
                </div>
                <br>
                <hr class="linecoloured">
                <%}%>
                    <br>
                   
   
    <br><br>


    
    <div class="footer">
        <div class="container flexx">
        <a href="/skills" class="btn button prev">
            <i class="fas fa-arrow-left iconn"></i>
            <span class="change">Prev</span>
        </a>
        <button class="add increment" name="btn" value="1">
            <i class="fas fa-plus iconn"></i>
            <span class="change">Add Project</span>
        </button>
        <%if(found[0].noOfProjects===1){%>
        <button type="button" class="add decrement notclickable" style="cursor: no-drop;" name="btn" value="2">
            <i class="fas fa-minus iconn"></i>
            <span class="change">Remove Project</span>
        </button>
        <%}else{%>
            <button class="add decrement" name="btn" value="2">
                <i class="fas fa-minus iconn"></i>
            <span class="change">Remove Award</span>
            </button>
        <%}%>    
        <button name="btn" value="3" class="btn button next">
            <i class="fas fa-arrow-right iconn"></i>
            <span class="change">Save & Next</span>
        </button>
        </div>
    </div>
</form>
</div>
</div>
</div>

