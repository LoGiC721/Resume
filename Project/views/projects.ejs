<%-include("sidemenu")-%>
    <div class="text-center information">
        <h4>Your Project Details</h4>
        <br>
        <form method="POST" action="projects">
            <%for(let i=0;i<found[0].noOfProjects;i++){%>

                <div class="sameline">
                    
                    <%if(found[0].project.length!==0){%>
                        
                        <label for="projectname">Project </label>
                        <input type="text" placeholder="projectname" id="projectname" name="projectname"
                            value="<%=found[0].project[0].projectname[i]%>" autocomplete="off">
                            <%}else{%>
                               
                            <label for="projectname">Project </label>
                            <input type="text" placeholder="projectname" id="projectname" name="projectname" value="" autocomplete="off">
                            <%}%>
                </div>
                <div class="sameline">
                    <%if(found[0].project.length!==0){%>
                        <label for="project1description">Project Description</label>
                        <input type="text" placeholder="project1description" id="project1description"
                            name="project1description" value="<%=found[0].project[0].project1description[i]%>" autocomplete="off">
                            <%}else{%>
                            <label for="project1description">Project Description</label>
                            <input type="text" placeholder="project1description" id="project1description"
                                name="project1description" value="" autocomplete="off">
                            <%}%>
                </div>
                <div class="sameline">
                    <%if(found[0].project.length!==0){%>
                        <label for="link">Link</label>
                        <input type="url" placeholder="link" id="link" name="link"
                            value="<%=found[0].project[0].link[i]%>" autocomplete="off">
                            <%}else{%>
                                <label for="link">Link</label>
                                <input type="url" placeholder="link" id="link" name="link"
                                    value="" autocomplete="off">
                            <%}%>
                </div>
                <div class="sameline">
                    <%if(found[0].project.length!==0){%>
                        <label for="toolsused">Tools Used</label>
                        <input type="text" placeholder="toolsused" id="toolsused" name="toolsused"
                            value="<%=found[0].project[0].toolsused[i]%>" autocomplete="off">
                            <%}else{%>
                            <label for="toolsused">Tools Used</label>
                            <input type="text" placeholder="toolsused" id="toolsused" name="toolsused" value="" autocomplete="off">
                            <%}%>
                </div>
                <br>
                <hr class="linecoloured">
                <%}%>
                    <br>
                   
    </div>
    <br><br>
    <div class="footer">
        <div class="container flexx">
        <a href="/skills" class="btn button prev">Prev</a>
        <button class="add increment" name="btn" value="1">Add Project</button>
        <%if(found[0].noOfProjects===1){%>
		    <button type="button" class="add decrement notclickable" style="cursor: no-drop;" name="btn" value="2">Remove Project</button>
            <%}else{%>
                <button class="add decrement" name="btn" value="2">Remove Project</button>
            <%}%>  
        <button name="btn" value="3" class="btn button next">Save & Next</button>
        </div>
    </div>
    </form>
    </div>
    </div>
    </div>
    <!-- jQuery CDN - Slim version (=without AJAX) -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
        integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
        crossorigin="anonymous"></script>
    <!-- Popper.JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"
        integrity="sha384-cs/chFZiN24E4KMATLdqdvsezGxaGsi4hLGOzlXwp5UZB1LY//20VyM2taTB4QvJ"
        crossorigin="anonymous"></script>
    <!-- Bootstrap JS -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"
        integrity="sha384-uefMccjFJAIv6A+rW+L4AHf99KvxDjWSu1z9VI8SKNVmz4sk7buKt/6v9KI65qnm"
        crossorigin="anonymous"></script>
    <script src="/js/sidebar.js" type="text/javascript"></script>
    </body>

    </html>