<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/icons/favicon.ico" />
    <title>Makeresume</title>
    <script
      src="https://kit.fontawesome.com/64d58efce2.js"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="/css/login.css" />
   
  </head>
  <body oncontextmenu="return false;">
    <div class="container">
      <div class="forms-container">
          <!-- Signup -->
        <div class="signin-signup">
            
          <form class="sign-in-form" method="POST" action="/reset/<%=found.resetPasswordToken%>">


            <%if(success.length>0){%>
              <div class="success">
                <i class="fas fa-check-circle"></i>
                <%=success%>
                <span onclick="this.parentElement.style.display='none'">&times;</span>
            </div>
          
            
              <%}else{%>
                <%if(danger.length>0){%>
                  <div class="danger">
                    <i class="fas fa-exclamation-triangle"></i>
                    <%=danger%>
                    <span onclick="this.parentElement.style.display='none'">&times;</span>
                </div>
                  
               
                <%}%>
                <%}%>


            <h2 class="title">New Password</h2>
            <br>
            
            <div class="input-field">
              <i class="fas fa-lock"></i>
              <input type="password" class="form-control" placeholder="Password..." name="password" autocomplete="off">
            </div>


             <div class="input-field">
              <i class="fas fa-lock"></i>
              <input type="password" class="form-control" placeholder="Confirm Password..." name="confirm" autocomplete="off">
            </div>



            <input type="submit" class="btn" value="Change" />
            <input type="reset" class="btn" value="Reset" />
          
          </form>
        </div>
      </div>

      <div class="panels-container">
        <div class="panel left-panel">
          <img src="/images/register.svg" class="image" alt="" />
        </div>
    </div>
    </div>


<!-- for  loader -->
<input type="hidden" id="page" value="register">

    <script src="js/loginpage.js"></script>
    <script src="js/loading.js" type="text/javascript"></script>
  </body>
</html>