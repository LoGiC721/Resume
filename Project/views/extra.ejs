<%-include("sidemenu")-%>
    <div class="text-center information">



        <h3>Enter Extra information</h3>
       <br>
        <form method="POST" action="extra">
        
        
		
         <div class="sameline">
              <label>Hobbies</label>
              <%for(let i=0;i<noOfhobbies;i++){%>
              <input type="text" name="hobbie">
             <%}%>
              <button name="btn" class="smallbtn" value="1">+</button>
              
              <button name="btn"  class="smallbtn" value="2">-</button>
         </div>

         <br>
        

         <div class="sameline">
            <label>Strengths</label>
            <%for(let i=0;i<noOfStrengths;i++){%>
                <input type="text" name="strength">
               <%}%>
                <button name="btn"  class="smallbtn" value="3">+</button>
                
                <button name="btn"  class="smallbtn" value="4">-</button>
       </div>
      
     
      <br>

       <div class="sameline">
        <label>Languages</label>
       
        <%for(let i=0;i<noOfLanguage;i++){%>
            <input type="text" name="language">
           <%}%>
            <button name="btn"  class="smallbtn" value="5">+</button>
            
            <button name="btn"  class="smallbtn" value="6">-</button>
        </div>

       
	<br>

        <div class="sameline">
            <label>Goals</label>
            <%for(let i=0;i<noOfGoals;i++){%>
                <input type="text" name="language">
               <%}%>
                <button name="btn"  class="smallbtn" value="7">+</button>
                
                <button name="btn"  class="smallbtn" value="8">-</button>
       </div>
   </div>


         <div class="footer">
            <a class="btn button prev notclickable" style="cursor: no-drop;">Prev</a>
            <button class="btn button next">Save & Next</button>
        </div>
        </form>
    </div>
