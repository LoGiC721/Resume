			<%var strdate = year1 + "-" + month1 + "-" + date1;%>




    <h4>Your Work Details</h4>
    <br>
    <form method="POST" action="work">
        <%for(let i=0;i<found[0].noOfWorkExperience;i++){%>
        <div class="sameline">
            <%if(found[0].work.length!==0){%>
            <label for="companyname<%=i%>">Company</label>
            <input type="text" placeholder="Company name" id="companyname<%=i%>" name="companyname" value="<%=found[0].work[0].companyname[i]%>" autocomplete="off">
            <%}else{%>
                <label for="companyname<%=i%>">Company</label>
            <input type="text" placeholder="Company name" id="companyname<%=i%>" name="companyname" value="" autocomplete="off">
            <%}%>
        </div>
        <div class="sameline">
            <%if(found[0].work.length!==0){%>
            <label for="jobtitle<%=i%>">Jobtitle</label>
            <input type="text" placeholder="jobtitle" id="jobtitle<%=i%>" name="jobtitle" value="<%=found[0].work[0].jobtitle[i]%>" autocomplete="off">
            <%}else{%>
            <label for="jobtitle<%=i%>">Jobtitle</label>
            <input type="text" placeholder="jobtitle" id="jobtitle<%=i%>" name="jobtitle" value="" autocomplete="off">
            <%}%>
        </div>
        <div class="sameline">
            <%if(found[0].work.length!==0){%>
            <label for="state<%=i%>">state</label>
            <input type="text" placeholder="state" id="state<%=i%>" name="state" value="<%=found[0].work[0].state[i]%>" autocomplete="off">
            <%}else{%>
                <label for="state<%=i%>">state</label>
                <input type="text" placeholder="state" id="state<%=i%>" name="state" value="" autocomplete="off">
                <%}%>     
        </div>
        <div class="sameline">
            <%if(found[0].work.length!==0){%>
            <label for="city<%=i%>">city</label>
            <input type="text" placeholder="city" id="city<%=i%>" name="city" value="<%=found[0].work[0].city[i]%>" autocomplete="off">
            <%}else{%>
                <label for="city<%=i%>">city</label>
            <input type="text" placeholder="city" id="city<%=i%>" name="city" value="" autocomplete="off">
            <%}%> 
        </div>
        <div class="sameline">
            <%if(found[0].work.length!==0){%>
                <%if(found[0].work[0].startdate[i]!=null){%>
                    <%let template=found[0].work[0].startdate[i]%>
                    <%let date=template.getDate()%>
                    <%if(date<10){%>
                    <%date='0' +date%>
                    <%}%>
                    <%let month=(template.getMonth())+1%>
                    <%if(month<10){%>
                    <%month='0' +month%>
                    <%}%>
                    <%let year=template.getFullYear()%>
                    <%let finaldate=`${year}-${month}-${date}`%>
            <label for="startdate<%=i%>">Start Date</label>
            <input type="date" placeholder="startdate" id="startdate<%=i%>" min="1940-01-01" max="<%=strdate%>" name="startdate" value="<%=finaldate%>" autocomplete="off">
            <%}else{%>
                <label for="startdate<%=i%>">Start Date</label>
                <input type="date" placeholder="startdate" id="startdate<%=i%>" min="1940-01-01" max="<%=strdate%>" name="startdate" value="" autocomplete="off">
            <%}%> 
            <%}else{%>
                <label for="startdate<%=i%>">Start Date</label>
                <input type="date" placeholder="startdate" id="startdate<%=i%>" min="1940-01-01" max="<%=strdate%>" name="startdate" value="" autocomplete="off">
            <%}%>     
        </div>
        <div class="sameline">
            <%if(found[0].work.length!==0){%>
                <%if(found[0].work[0].enddate[i]!=null){%>
                    <%let template=found[0].work[0].enddate[i]%>
                    <%let date=template.getDate()%>
                    <%if(date<10){%>
                    <%date='0' +date%>
                    <%}%>
                    <%let month=(template.getMonth())+1%>
                    <%if(month<10){%>
                    <%month='0' +month%>
                    <%}%>
                    <%let year=template.getFullYear()%>
                    <%let finaldate=`${year}-${month}-${date}`%>
            <label for="enddate<%=i%>">End Date</label>
            <input type="date" placeholder="enddate" id="enddate<%=i%>" min="1940-01-01" max="<%=strdate%>" name="enddate" value="<%=finaldate%>" autocomplete="off">
            <%}else{%>
                <label for="enddate<%=i%>">End Date</label>
            <input type="date" placeholder="enddate" id="enddate<%=i%>" min="1940-01-01" max="<%=strdate%>" name="enddate" value="" autocomplete="off">
            <%}%>
            <%}else{%>
                <label for="enddate<%=i%>">End Date</label>
            <input type="date" placeholder="enddate" id="enddate<%=i%>" min="1940-01-01" max="<%=strdate%>" name="enddate" value="" autocomplete="off">
            <%}%>
        </div>
        <div class="sameline">
            <%if(found[0].work.length!==0){%>
            <label for="jobdescription<%=i%>">Description</label>
            <input type="text" placeholder="jobdescription" id="jobdescription<%=i%>" name="jobdescription" value="<%=found[0].work[0].jobdescription[i]%>" autocomplete="off">
            <%}else{%>
                <label for="jobdescription<%=i%>">Description</label>
                <input type="text" placeholder="jobdescription" id="jobdescription<%=i%>" name="jobdescription" autocomplete="off">
            <%}%>       
        </div>
        <br>
		<hr class="linecoloured">
		<%}%>
		<br>
		
		<br>
		<div class="footer">
            <div class="container flexx">
			<a href="/education" class="btn button prev">
                <i class="fas fa-arrow-left iconn"></i>
				<span class="change">Prev</span>
            </a>
			<button class="add increment" name="btn" value="1">
                <i class="fas fa-plus iconn"></i>
				<span class="change">Add Work</span>
            </button>
		    <%if(found[0].noOfWorkExperience===1){%>
                <button type="button" class="add decrement notclickable" style="cursor: no-drop;" name="btn" value="2">
                    <i class="fas fa-minus iconn"></i>
                    <span class="change">Remove Work</span>
                </button>
                <%}else{%>
                    <button class="add decrement" name="btn" value="2">
                        <i class="fas fa-minus iconn"></i>
                        <span class="change">Remove Work</span>

                    </button>
                <%}%>   
			<button name="btn" value="3" class="btn button next">
                <i class="fas fa-arrow-right iconn"></i>
				<span class="change">Save & Next</span>
            </button>
            </div>
		</div>
    </form>

