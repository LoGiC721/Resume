<%-include("sidemenu")-%>
<div class="text-center information">
    <h3>Your Work Details</h3>
    <br>
    <form method="POST" action="work">
        <%for(let i=0;i<noOfWorkExperience;i++){%>
        <div class="sameline">
            <%if(found[0].work.length!==0){%>
            <label for="companyname">Company</label>
            <input type="text" placeholder="Company name" id="companyname" name="companyname" value="<%=found[0].work[0].companyname[i]%>" autocomplete="off">
            <%}else{%>
                <label for="companyname">Company</label>
            <input type="text" placeholder="Company name" id="companyname" name="companyname" value="" autocomplete="off">
            <%}%>
        </div>
        <div class="sameline">
            <%if(found[0].work.length!==0){%>
            <label for="jobtitle">jobtitle</label>
            <input type="text" placeholder="jobtitle" id="jobtitle" name="jobtitle" value="<%=found[0].work[0].jobtitle[i]%>" autocomplete="off">
            <%}else{%>
            <label for="jobtitle">jobtitle</label>
            <input type="text" placeholder="jobtitle" id="jobtitle" name="jobtitle" value="" autocomplete="off">
            <%}%>
        </div>
        <div class="sameline">
            <%if(found[0].work.length!==0){%>
            <label for="state">state</label>
            <input type="text" placeholder="state" id="state" name="state" value="<%=found[0].work[0].state[i]%>" autocomplete="off">
            <%}else{%>
                <label for="state">state</label>
                <input type="text" placeholder="state" id="state" name="state" value="" autocomplete="off">
                <%}%>     
        </div>
        <div class="sameline">
            <%if(found[0].work.length!==0){%>
            <label for="city">city</label>
            <input type="text" placeholder="city" id="city" name="city" value="<%=found[0].work[0].city[i]%>" autocomplete="off">
            <%}else{%>
                <label for="city">city</label>
            <input type="text" placeholder="city" id="city" name="city" value="" autocomplete="off">
            <%}%> 
        </div>
        <div class="sameline">
            <%if(found[0].work.length!==0){%>
                <%if(found[0].work[0].startdate[i]!=null){%>
                    <%let template=found[0].work[0].startdate[i]%>
                    <%let date=template.getDate()%>
                    <%if(date<10){%>
                    <%date='0' +date%>
                    <%}%>
                    <%let month=(template.getMonth())+1%>
                    <%if(month<10){%>
                    <%month='0' +month%>
                    <%}%>
                    <%let year=template.getFullYear()%>
                    <%let finaldate=`${year}-${month}-${date}`%>
            <label for="startdate">Start Date</label>
            <input type="date" placeholder="startdate" id="startdate" name="startdate" value="<%=finaldate%>" autocomplete="off">
            <%}else{%>
                <label for="startdate">Start Date</label>
                <input type="date" placeholder="startdate" id="startdate" name="startdate" value="" autocomplete="off">
            <%}%> 
            <%}else{%>
                <label for="startdate">Start Date</label>
                <input type="date" placeholder="startdate" id="startdate" name="startdate" value="" autocomplete="off">
            <%}%>     
        </div>
        <div class="sameline">
            <%if(found[0].work.length!==0){%>
                <%if(found[0].work[0].enddate[i]!=null){%>
                    <%let template=found[0].work[0].enddate[i]%>
                    <%let date=template.getDate()%>
                    <%if(date<10){%>
                    <%date='0' +date%>
                    <%}%>
                    <%let month=(template.getMonth())+1%>
                    <%if(month<10){%>
                    <%month='0' +month%>
                    <%}%>
                    <%let year=template.getFullYear()%>
                    <%let finaldate=`${year}-${month}-${date}`%>
            <label for="enddate">End Date</label>
            <input type="date" placeholder="enddate" id="enddate" name="enddate" value="<%=finaldate%>" autocomplete="off">
            <%}else{%>
                <label for="enddate">End Date</label>
            <input type="date" placeholder="enddate" id="enddate" name="enddate" value="" autocomplete="off">
            <%}%>
            <%}else{%>
                <label for="enddate">End Date</label>
            <input type="date" placeholder="enddate" id="enddate" name="enddate" value="" autocomplete="off">
            <%}%>
        </div>
        <div class="sameline">
            <%if(found[0].work.length!==0){%>
            <label for="jobdescription">Description</label>
            <input type="text" placeholder="jobdescription" id="jobdescription" name="jobdescription" value="<%=found[0].work[0].jobdescription[i]%>" autocomplete="off">
            <%}else{%>
                <label for="jobdescription">Description</label>
                <input type="text" placeholder="jobdescription" id="jobdescription" name="jobdescription" autocomplete="off">
            <%}%>       
        </div>
        <br>
		<hr class="linecoloured">
		<%}%>
		<br>
		
		<br>
		<div class="footer">
			<a href="/education" class="btn button prev">Prev</a>
			<button class="add increment" name="btn" value="1">Add Job</button>
		    <%if(noOfWorkExperience===1){%>
                <button type="button" class="add decrement notclickable" style="cursor: no-drop;" name="btn" value="2">Remove Job</button>
                <%}else{%>
                    <button class="add decrement" name="btn" value="2">Remove Job</button>
                <%}%>   
			<button name="btn" value="3" class="btn button next">Save & Next</button>
		</div>
    </form>

    </div>
    </div>
</div>
