<%-include("sidemenu")-%>
<div class="text-center information">
	<h3>Your Educational Details</h3>
	<br>
	<form method="POST" action="education">
		<%for(let i=0;i<noOfProjects;i++){%>
		<div class="sameline">
			<%if((found[0].school.length!==0&&((noOfProjects-i)!==1))||(flag1===1)){%>
			<label for="name">College</label>
			<input type="text" placeholder="College/University" id="name" name="name" value="<%=found[0].school[i].name%>" autocomplete="off"> 
			<%}else{%>
			<label for="name">College</label>
			<input type="text" placeholder="College/University" id="name" name="name" value="" autocomplete="off">
			<%}%>
		</div>
		<div class="sameline">
			<%if((found[0].school.length!==0&&((noOfProjects-i)!==1))||(flag1===1)){%>
			<%if(found[0].school[i].startdate!==null){%>
			<%let template=found[0].school[i].startdate%>
			<%let date=template.getDate()%>
			<%if(date<10){%>
			<%date='0' +date%>
			<%}%>
			<%let month=(template.getMonth())+1%>
			<%if(month<10){%>
			<%month='0' +month%>
			<%}%>
			<%let year=template.getFullYear()%>
			<%let finaldate=`${year}-${month}-${date}`%>
			<label for="startdate">Start date</label>
			<input type="date" placeholder="Start date" id="startdate" name="startdate" value="<%=finaldate%>" autocomplete="off"> 
            <%}else{%>
            <label for="startdate">Start date</label>
			<input type="date" placeholder="Start date" id="startdate" name="startdate" value="" autocomplete="off">
			<%}%>
			<%}else{%>
			<label for="startdate">Start date</label>
			<input type="date" placeholder="Start date" id="startdate" name="startdate" value="" autocomplete="off">
			<%}%>
		</div>
		

        <div class="sameline">
			<%if((found[0].school.length!==0&&((noOfProjects-i)!==1))||(flag1===1)){%>
			<%if(found[0].school[i].enddate!==null){%>
			<%let template=found[0].school[i].enddate%>
			<%let date=template.getDate()%>
			<%if(date<10){%>
			<%date='0' +date%>
			<%}%>
			<%let month=(template.getMonth())+1%>
			<%if(month<10){%>
			<%month='0' +month%>
			<%}%>
			<%let year=template.getFullYear()%>
			<%let finaldate=`${year}-${month}-${date}`%>
			<label for="enddate">End date</label>
			<input type="date" placeholder="End date" id="enddate" name="enddate" value="<%=finaldate%>" autocomplete="off"> 
            <%}else{%>
                <label for="enddate">End date</label>
                <input type="date" placeholder="End date" id="enddate" name="enddate" value="" autocomplete="off">
			<%}%>
			<%}else{%>
                <label for="enddate">End date</label>
                <input type="date" placeholder="End date" id="enddate" name="enddate" value="" autocomplete="off">
			<%}%>
		</div>


		<div class="sameline">
			<%if((found[0].school.length!==0&&((noOfProjects-i)!==1))||(flag1===1)){%>
			<label for="degree">Degree</label>
			<input type="text" placeholder="Degree" id="degree" name="degree" value="<%=found[0].school[i].degree%>" autocomplete="off"> 
			<%}else{%>
			<label for="degree">Degree</label>
			<input type="text" placeholder="Degree" id="degree" name="degree" value="" autocomplete="off">
			<%}%>
		</div>
		<div class="sameline">
			<%if((found[0].school.length!==0&&((noOfProjects-i)!==1))||(flag1===1)){%>
			<label for="gpa">Gpa</label>
			<input type="number" placeholder="Gpa" id="gpa" name="gpa" value="<%=found[0].school[i].gpa%>" autocomplete="off"> 
			<%}else{%>
			<label for="gpa">Gpa</label>
			<input type="number" placeholder="Gpa" id="gpa" name="gpa" value="" autocomplete="off">
			<%}%>
		</div>
		<div class="sameline">
			<%if((found[0].school.length!==0&&((noOfProjects-i)!==1))||(flag1===1)){%>
			<label for="location">College Location</label>
			<input type="text" placeholder="location" id="location" name="location" value="<%=found[0].school[i].location%>" autocomplete="off"> 
			<%}else{%>
			<label for="location">College Location</label>
			<input type="text" placeholder="location" id="location" name="location" value="" autocomplete="off">
			<%}%>
		</div>
		<br>
		<hr class="linecoloured">
		<%}%>
		<br>
		<br>
		<br>
		<div class="footer">
			<a href="/profile" class="btn button prev">Prev</a>
			<button class="add increment" name="btn" value="1">Add School</button>
		    <button class="add decrement" name="btn" value="2">Remove School</button>
			<button name="btn" value="3" class="btn button next">Save & Next</button>
		</div>
	</form>
</div>
</div>
</div>
