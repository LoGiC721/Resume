<%-include("sidemenu")-%>

<div class="text-center information">
	<h4>Your Educational Details</h4>
	<br>
	<form method="POST" action="education">
		<%for(let i=0;i<found[0].noOfeducation;i++){%>
		<div class="sameline">
			<%if(found[0].school.length!==0){%>
			<label for="name">College</label>
			<input type="text" placeholder="College/University" id="name" name="name" value="<%=found[0].school[0].name[i]%>" autocomplete="off"> 
			<%}else{%>
			<label for="name">College</label>
			<input type="text" placeholder="College/University" id="name" name="name" value="" autocomplete="off">
			<%}%>
		</div>
		<div class="sameline">
			<%if(found[0].school.length!==0){%>
			<%if(found[0].school[0].startdate[i]!=null){%>
			<%let template=found[0].school[0].startdate[i]%>
			<%let date=template.getDate()%>
			<%if(date<10){%>
			<%date='0' +date%>
			<%}%>
			<%let month=(template.getMonth())+1%>
			<%if(month<10){%>
			<%month='0' +month%>
			<%}%>
			<%let year=template.getFullYear()%>
			<%let finaldate=`${year}-${month}-${date}`%>
			<label for="startdate">Start date</label>
			<input type="date" placeholder="Start date" id="startdate" name="startdate" value="<%=finaldate%>" autocomplete="off"> 
            <%}else{%>
            <label for="startdate">Start date</label>
			<input type="date" placeholder="Start date" id="startdate" name="startdate" value="" autocomplete="off">
			<%}%>
			<%}else{%>
			<label for="startdate">Start date</label>
			<input type="date" placeholder="Start date" id="startdate" name="startdate" value="" autocomplete="off">
			<%}%>
		</div>
		

        <div class="sameline">
			<%if(found[0].school.length!==0){%>
			<%if(found[0].school[0].enddate[i]!=null){%>
			<%let template=found[0].school[0].enddate[i]%>
			<%let date=template.getDate()%>
			<%if(date<10){%>
			<%date='0' +date%>
			<%}%>
			<%let month=(template.getMonth())+1%>
			<%if(month<10){%>
			<%month='0' +month%>
			<%}%>
			<%let year=template.getFullYear()%>
			<%let finaldate=`${year}-${month}-${date}`%>
			<label for="enddate">End date</label>
			<input type="date" placeholder="End date" id="enddate" name="enddate" value="<%=finaldate%>" autocomplete="off"> 
            <%}else{%>
                <label for="enddate">End date</label>
                <input type="date" placeholder="End date" id="enddate" name="enddate" value="" autocomplete="off">
			<%}%>
			<%}else{%>
                <label for="enddate">End date</label>
                <input type="date" placeholder="End date" id="enddate" name="enddate" value="" autocomplete="off">
			<%}%>
		</div>


		<div class="sameline">
			<%if(found[0].school.length!==0){%>
			<label for="degree">Degree</label>
			<input type="text" placeholder="Degree" id="degree" name="degree" value="<%=found[0].school[0].degree[i]%>" autocomplete="off"> 
			<%}else{%>
			<label for="degree">Degree</label>
			<input type="text" placeholder="Degree" id="degree" name="degree" value="" autocomplete="off">
			<%}%>
		</div>
		<div class="sameline">
			<%if(found[0].school.length!==0){%>
			<label for="gpa">Gpa</label>
			<input type="number" placeholder="Gpa" id="gpa" name="gpa" value="<%=found[0].school[0].gpa[i]%>" autocomplete="off"> 
			<%}else{%>
			<label for="gpa">Gpa</label>
			<input type="number" placeholder="Gpa" id="gpa" name="gpa" value="" autocomplete="off">
			<%}%>
		</div>
		<div class="sameline">
			<%if(found[0].school.length!==0){%>
			<label for="location">College Location</label>
			<input type="text" placeholder="location" id="location" name="location" value="<%=found[0].school[0].location[i]%>" autocomplete="off"> 
			<%}else{%>
			<label for="location">College Location</label>
			<input type="text" placeholder="location" id="location" name="location" value="" autocomplete="off">
			<%}%>
		</div>
		<br>
		<hr class="linecoloured">
		<%}%>
		<br>
		<br>
		<br>
		<div class="footer">
			<div class="container flexx">
			<a href="/profile" class="btn button prev ">
				<i class="fas fa-arrow-left iconn"></i>
				<span class="change">Prev</span>
			</a>
			<button class="add increment" name="btn" value="1">
				<i class="fas fa-plus iconn"></i>
				<span class="change">Add School</span>
			</button>
		    <%if(found[0].noOfeducation===1){%>
				<button type="button" class="add decrement notclickable" style="cursor: no-drop;" name="btn" value="2">
					<i class="fas fa-minus iconn"></i>
				<span class="change">Remove School</span>

				</button>
				<%}else{%>
					<button class="add decrement" name="btn" value="2">
                        <i class="fas fa-minus iconn"></i>
                        <span class="change">Remove School</span>

                    </button>
				<%}%>   
			<button name="btn" value="3" class="btn button next">
				<i class="fas fa-arrow-right iconn"></i>
				<span class="change">Save & Next</span>
				
			</button>
		</div>
		</div>
	</form>
</div>
</div>
</div>

