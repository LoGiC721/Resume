		  </div>
<%}%>
<%}%>




           <%let d = new Date();%>
		   <%let date1=d.getDate()%>
			<%if(date1<10){%>
				<%date1='0' +date1%>
				<%}%>
				<%let month1=(d.getMonth())+1%>
				<%if(month1<10){%>
				<%month1='0' +month1%>
				<%}%>
